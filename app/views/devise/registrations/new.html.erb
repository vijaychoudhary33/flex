<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white shadow-lg rounded-lg p-8 max-w-md w-full">
    <h2 class="text-xl font-bold mb-4">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mb-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :name, class: "block font-bold mb-2" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :user_name, class: "block font-bold mb-2" %><br />
        <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block font-bold mb-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :address, class: "block font-bold mb-2" %><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block font-bold mb-2" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block font-bold mb-2" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="flex items-center">
        <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
