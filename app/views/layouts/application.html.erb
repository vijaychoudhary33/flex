<!DOCTYPE html>
<html>
  <head>
    <title>Flex</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if flash[:error] %>
      <div class="alert alert-danger">
        <%= flash[:error] %>
      </div>
    <% end %>
     <% if user_signed_in? %>
      <div class="w-full flex  items-center ">
        <h1 class="text-4xl font-bold  "><%= "FLEX" %></h1>

         <%# <h1 class="heading font-bold mb-2  " style="position: absolute; top: 0; right: 5; padding: 25px; color: red;">
    <%= "FLEX" %>

          <div class="ml-auto">
          <%= button_to "Sign Out", destroy_user_session_path,
            method: :delete, class: "nav-link bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
          </div>
          
      <% end %>
      </div>
    <%= yield %>
  </body>
</html>
